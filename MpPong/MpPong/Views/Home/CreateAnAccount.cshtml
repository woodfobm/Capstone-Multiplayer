@model MpPong.Models.MpPongPlayer

@{
    ViewData["Title"] = "Create an Account";
}
@{
    <head>
        <link rel="stylesheet" href="~/build/styles/index.css" />
    </head>


    <h2>Create an account</h2>
    <form asp-action="Create"id="createAccount">
        <div class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="playerUsername">Username:</label>
            <input type="text" class="form-control" asp-for="playerUsername" placeholder="JonnyAppleseed123">
            <span asp-validation-for="playerUsername" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="playerPassword">Password:</label>
            <input type="password" class="form-control" asp-for="playerPassword" placeholder="password123">
        </div>
        <button type="submit" value="Create" class="btn btn-primary">Submit</button>
    </form>
    <environment names="Development">
        <script src="~/build/libs/phaser.min.js"></script>
        <script src="~/build/game.js"></script>
    </environment>
}