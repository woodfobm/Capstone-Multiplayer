@{ 
    ViewData["Title"] = "Home";
}
@{
    <head>
        <link rel="stylesheet" href="~/build/styles/index.css" />
    </head>

    <!--Actual spot where our game is being run below.
    The rest is regular html that we can still mess with-->

    <div id="content">

    </div>

    <div id="how-to">
        <h3>Game Instructions</h3>
        <div id="controls">
            <img src="~/build/images/arrow-instruction.png"
                 width="245"/>
        </div>

        <div id="rules">
            <ol>
                <li><span class="color">Countdown of ball begins</span></li>
                <li><span class="color">Ball is served</span></li>
                <li><span class="color">Hit ball back to your opponent</span></li>
                <li><span class="color">Be the first to 11 points to win</span></li>
                <li><span class="color">Have fun!</span></li>
            </ol>
        </div>
    </div>


    <form id="login">
        <h3>Login</h3>
        <div class="form-group">
            <label for="formGroupUsername">Username:</label>
            <input type="text" class="form-control" id="formGroupUsername" placeholder="JonnyAppleseed123">
        </div>
        <div class="form-group">
            <label for="formGroupPassword">Password:</label>
            <input type="password" class="form-control" id="formGroupPassword" placeholder="password123">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <environment names="Development">
        <script src="~/build/libs/jquery-3.2.1.min.js"></script>
        <script src="~/build/libs/phaser.min.js"></script>
        <script src="~/build/game.js"></script>
    </environment>
}
